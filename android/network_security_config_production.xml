<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production configuration: Strict security, no cleartext traffic -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Only trust system certificate authorities -->
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
    
    <!-- Explicit domain configuration for production API -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">brewtracker-backend.fly.dev</domain>
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
</network-security-config>