<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Debug build: Allow cleartext traffic for local development -->
    <!-- This enables HTTP connections to localhost/192.168.x.x for development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>