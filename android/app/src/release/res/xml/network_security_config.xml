<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Release build: Secure configuration - NO cleartext traffic -->
    <!-- This enforces HTTPS for all network connections in production -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>