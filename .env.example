# Environment Configuration Template
# Copy this file to .env.development or .env.production and update values

# API Configuration
# Development: http://YOUR_LOCAL_IP:5000/api
# Production: https://brewtracker-backend.fly.dev/api
EXPO_PUBLIC_API_URL=http://YOUR_BACKEND_IP:5000/api

# Environment settings
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug
EXPO_PUBLIC_ENVIRONMENT=development

# Feature flags
EXPO_PUBLIC_ENABLE_GOOGLE_AUTH=false
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_DEV_TOOLS=true

# Analytics
EXPO_PUBLIC_ANALYTICS_ENABLED=false

# Development tools (disable in production)
EXPO_PUBLIC_ENABLE_FLIPPER=true
EXPO_PUBLIC_ENABLE_HERMES_INSPECTOR=true